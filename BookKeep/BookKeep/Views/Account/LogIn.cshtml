@model BookKeep.ViewModels.LogInViewModel;
@{
    Layout = "~/Views/Shared/_LogInLayout.cshtml";
}
<h2 class="text-center">@ViewBag.Title</h2>
<form method="post"  class="form-horizontal" asp-controller="Account" asp-action="LogIn">
    <div asp-validation-summary="All">

        <div class="form-group">
            <label asp-for="Email_id"></label>
            <input class="form-control" asp-for="Email_id" />
            <span asp-validation-for="Email_id"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <input class="form-control" asp-for="Password" />
            <span asp-validation-for="Password"></span>
        </div>
        <div class="form-group">
            <label asp-for="RememberMe"></label>
            <input class="form-control" asp-for="RememberMe" />
            <span asp-validation-for="RememberMe"></span>
        </div>

        <div><p><input class="form-control" type="submit" value="LogIn" /></p><p><a asp-action="Register">Register</a></p></div>
        <a class="btn btn-primary login-button" asp-action="SignIn" asp-route-provider="@Model.FacebookProvider">@Model.FacebookProvider</a>
        
    </div>
</form>
